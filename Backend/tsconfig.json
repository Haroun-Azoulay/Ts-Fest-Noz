// ts.config
{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "declarationMap": true,
    "types": ["node", "jest"]
  },
  "include": [
    "app.ts",
    "src/**/*",
    "types/**/*",
    "__tests__/**/*",
    "global.d.ts"
  ],
  "exclude": ["__tests__/setup/customTestSequencer.ts"]
}
